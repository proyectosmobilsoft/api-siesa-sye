# Variables de entorno para sincronización de pedidos

# Habilitar/deshabilitar sincronización automática
SYNC_ENABLED=true

# Intervalo de sincronización en segundos (30 = cada 30 segundos)
SYNC_INTERVAL_SECONDS=30

# URL del endpoint HTTP donde se enviarán los pedidos
# Ejemplo: https://miapi.com/pedidos
SYNC_ENDPOINT_URL=https://webhook.site/tu-uuid-aqui

# Número de intentos de reenvío en caso de error
SYNC_RETRY_ATTEMPTS=3

# Delay inicial entre reintentos en milisegundos (se usa backoff exponencial)
SYNC_RETRY_DELAY_MS=1000

# Timeout para peticiones HTTP en milisegundos
SYNC_TIMEOUT_MS=10000
